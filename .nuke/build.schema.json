{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Build Schema",
  "$ref": "#/definitions/build",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "DockerBuildLatest": {
          "type": "boolean",
          "description": "Docker build sets tag as latest"
        },
        "GitCloneBranch": {
          "type": "string",
          "description": "Git Clone branch (i.e.) master"
        },
        "GitCommand": {
          "type": "string",
          "description": "Git command. [Example: nuke --git-command 'status'] If quotes are used, they must be in the form: \\\\\". [For example: nuke --git-command 'commit -m \\\\\"Hello world\\\\\"']"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI"
          ]
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "ServiceName": {
          "type": "string",
          "description": "Service Name chosen for the project, will default to all if not chosen or if it does not exist"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "DockerBuild",
              "DotnetClean",
              "DotnetCompile",
              "DotnetPublish",
              "DotnetRestore",
              "DotnetTest",
              "DotnetTestAndPublish",
              "GitRun",
              "ListServices",
              "Version"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "DockerBuild",
              "DotnetClean",
              "DotnetCompile",
              "DotnetPublish",
              "DotnetRestore",
              "DotnetTest",
              "DotnetTestAndPublish",
              "GitRun",
              "ListServices",
              "Version"
            ]
          }
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}